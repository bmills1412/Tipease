<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:padding="@dimen/productTotalWindowPadding"
    android:background="@color/pricesDataBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




<android.support.design.widget.TextInputLayout
    android:id="@id/productWindowTextInput"
    android:hint="@string/productWindowTextHint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<com.example.bryan.tipease.CustomViews.ProductTotalEditText
    android:hint="@string/pricesDefault"
    android:id="@id/productEditText"
    android:inputType="numberDecimal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

</android.support.design.widget.TextInputLayout>




</FrameLayout>