<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_main_screen"

    android:background="@color/pricesDataBackground"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryan.tipease.MainControllers.MainScreen">



    <android.support.v7.widget.CardView
        android:id="@id/tipViewControllerContainer"
        android:background="@color/tipViewControllerBackground"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardElevation="8dp" />




<FrameLayout
    android:id="@id/pricesDataContainer"
    android:layout_below="@id/tipViewControllerContainer"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


</RelativeLayout>
